SUB GRAPHINIT
    POINT.X = 0
    POINT.Y = 0
    XSPACE = 400
    YSPACE = 400
    XZERO = XSPACE/2
    YZERO = YSPACE/2
    XSTART = -2
    XFINISH = 3
    YSTART = -2
    YFINISH = 3
    XRANGE = XFINISH-XSTART
    YRANGE = YFINISH-YSTART
    XDT = XRANGE/XSPACE
    YDT = YRANGE/YSPACE
    XZERO = XSPACE/XRANGE*-XSTART
    YZERO = YSPACE/YRANGE*-YSTART
    AREA = 0
END SUB

SUB DRAWGRID
    LINE(40,MM.VRES-16-YZERO)-(MM.HRES-40,MM.VRES-16-YZERO)
    LINE(40+XZERO,16)-(40+XZERO,MM.VRES-16)
END SUB

SUB PLOTLINE
    FOR i = 0 TO XRANGE STEP XDT
        POINT.X = i/XDT
        POINT.Y = FORMULA(i+XSTART)/YDT
        PIXEL(40+POINT.X,MM.VRES-16-POINT.Y)=BLUE
    NEXT
END SUB

FUNCTION FORMULA(X)
'    FORMULA = X * (SIN(X) * 3)
    FORMULA = 2
END FUNCTION

SUB FINDAREA
    FOR i = 0 TO RANGE STEP DT
        POINT.X = i/DT
        POINT.Y = (FORMULA(i+START)-START)/DT
        IF POINT.X MOD(2) = 0 THEN
            LINE(40+POINT.X,MM.VRES-16-POINT.Y)-(40+POINT.X,MM.VRES-16-YZERO),GREEN
        ENDIF
        AREA = AREA+(FORMULA(i+START)-START)*DT
    NEXT
    PRINT AREA
END SUB

GRAPHINIT
DRAWGRID
PLOTLINE
