POINT.X = 0
POINT.Y = 0
XSPACE = 400
YSPACE = 400
XZERO = XSPACE/2
YZERO = YSPACE/2
START = -2
FINISH = 3
RANGE = FINISH-START
DT = RANGE/XSPACE
XZERO = XSPACE/RANGE*-START
YZERO = YSPACE/RANGE*-START
AREA = 0

FUNCTION FORMULA(X)
'    FORMULA = (((4*X^3)-(6*X^2)+1)*SQR(X+1))/(3-X)
    FORMULA = (X*SIN(X^2))+1
'    FORMULA = 1
'    FORMULA = 2*PI*X
END FUNCTION

SUB DRAWGRID
    LINE(40,MM.VRES-16-YZERO)-(MM.HRES-40,MM.VRES-16-YZERO)
    LINE(40+XZERO,16)-(40+XZERO,MM.VRES-16)
END SUB

SUB PLOTLINE
    FOR i = 0 TO RANGE STEP DT
        POINT.X = i/DT
        POINT.Y = (FORMULA(i+START)-START)/DT
        PIXEL(40+POINT.X,MM.VRES-16-POINT.Y)=BLUE
    NEXT
END SUB

SUB FINDAREA
    FOR i = 0 TO RANGE STEP DT
        POINT.X = i/DT
        POINT.Y = (FORMULA(i+START)-START)/DT
        IF POINT.X MOD(2) = 0 THEN
            LINE(40+POINT.X,MM.VRES-16-POINT.Y)-(40+POINT.X,MM.VRES-16-YZERO),GREEN
        ENDIF
        AREA = AREA+(FORMULA(i+START)-START)*DT
    NEXT
    PRINT AREA
END SUB
    
DRAWGRID
PLOTLINE
FINDAREA