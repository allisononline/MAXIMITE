FUNCTION PAD$(STR$,SPC)
    FOR l = 0 TO SPC
        POKE VAR PAD$,l,48
    NEXT
    FOR l = 0 TO SPC
        POKE VAR PAD$,l+(SPC-LEN(STR$)+1),PEEK(VAR STR$,l)
    NEXT
END FUNCTION

SUB CONTROL.INIT
    SETPIN D3, DIN
    SETPIN D4, DIN
    SETPIN D5, DIN
    SETPIN D6, DIN
    SETPIN D7, DIN
END SUB

FUNCTION CONTROL.READ$()
    IF PORT(D3,5) <> 31 THEN
        CONTROL.READ$ = PAD$(BIN$(PORT(D3,5)),5)
    ELSE
        CONTROL.READ$ = "00000"
    ENDIF
END FUNCTION