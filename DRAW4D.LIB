        d = POINT(LINES(j,0)-1,2) * MAGX
        e = POINT(LINES(j,1)-1,0) * MAGX
        f = POINT(LINES(j,1)-1,1) * MAGX
        g = POINT(LINES(j,1)-1,2) * MAGX
