CLS
SPRITE LOAD "TEST.SPR"
X = MM.HRES / 2
Y = MM.VRES / 2
SPRITE ON 1, X, Y
DO WHILE KEYDOWN <> 27
PAUSE 5
IF KEYDOWN = 128 AND COLLISION(1, EDGE) <> &B0100 THEN
Y = Y - 1
ENDIF
IF KEYDOWN = 129 AND COLLISION(1, EDGE) <> &B1000 THEN
Y = Y + 1
ENDIF
IF KEYDOWN = 130 AND COLLISION(1, EDGE) <> &B0001 THEN
X = X - 1
ENDIF
IF KEYDOWN = 131 AND COLLISION(1, EDGE) <> &B0010 THEN
X = X + 1
ENDIF
SPRITE MOVE 1, X, Y
LOOP
SPRITE OFF ALL

